<!doctype html>
  <head>
    <title>Travis CI - Distributed build platform for the Ruby community</title>

    <meta charset="utf-8">
    <meta name="csrf-token" content="<%= form_authenticity_token %>">

    <!-- https://docs.google.com/present/view?id=dkx3qtm_22dxsrgcf4 -->
    <meta name="HandheldFriendly" content="True">
    <meta name="MobileOptimized"  content="320">
    <meta name="viewport"         content="width=device-width, initial-scale=1.0, user-scalable=no, target-densitydpi=device-dpi" >

    <!-- Mobile IE allows us to activate ClearType technology for smoothing fonts for easy reading -->
    <meta http-equiv="cleartype" content="on">

    <!-- TODO_MOB Add all icons -->
    <link rel="icon" type="image/png" href="/favicon.ico">

    <%= stylesheet_link_tag 'mobile' %>
    <%= include_javascripts :travis_mobile %>

    <%= javascript_tag do %>
      if (!window.Travis) { window.Travis = {}; }

      Travis.env    = '<%= Rails.env %>';
    <% end %>
  </head>

  <body>
    <div id="top">
      <h1>Travis</h1>

      <ul id="navigation">
        <%= top_bar_menu_item('Home', root_path) %>
        <%= top_bar_menu_item('Stats', stats_path) %>
      </ul>
    </div>

    <div id="main">
    </div>

  </body>
</html>
